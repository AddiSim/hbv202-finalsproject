<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="is.hi.hbv202g.assignment8.UserSelectionController">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>
   <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Please log in " />
    <TextField fx:id="userNameField" promptText="Enter your name" />
    <ComboBox fx:id="userTypeComboBox" promptText="Select user type" />
    <Button onAction="#handleLoginAction" text="Login" />
</VBox>
